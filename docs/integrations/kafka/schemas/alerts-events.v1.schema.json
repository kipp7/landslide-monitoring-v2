{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/kafka.alerts-events.v1.schema.json",
  "title": "Kafka alerts.events.v1 payload",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "alert_id", "event_id", "event_type", "created_ts", "rule_id", "rule_version", "severity"],
  "properties": {
    "schema_version": { "type": "integer", "const": 1 },
    "alert_id": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "event_id": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "event_type": {
      "type": "string",
      "enum": ["ALERT_TRIGGER", "ALERT_UPDATE", "ALERT_RESOLVE", "ALERT_ACK"]
    },
    "created_ts": { "type": "string", "format": "date-time" },
    "rule_id": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "rule_version": { "type": "integer", "minimum": 1 },
    "severity": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
    "device_id": {
      "type": ["string", "null"],
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "station_id": {
      "type": ["string", "null"],
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "evidence": { "type": "object", "additionalProperties": true },
    "explain": { "type": "string" }
  }
}


{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/presence-events.v1.schema.json",
  "title": "PresenceEvent (Kafka) v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "device_id", "event_ts", "status", "received_ts"],
  "properties": {
    "schema_version": { "type": "integer", "const": 1 },
    "device_id": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "event_ts": { "type": "string", "format": "date-time" },
    "status": { "type": "string", "enum": ["online", "offline"] },
    "meta": { "type": "object", "additionalProperties": true },
    "received_ts": { "type": "string", "format": "date-time" }
  }
}


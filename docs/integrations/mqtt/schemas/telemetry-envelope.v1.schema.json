{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/telemetry-envelope.v1.schema.json",
  "title": "TelemetryEnvelope (MQTT) v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "device_id", "metrics"],
  "properties": {
    "schema_version": { "type": "integer", "const": 1 },
    "device_id": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "event_ts": { "type": ["string", "null"], "format": "date-time" },
    "seq": { "type": ["integer", "null"], "minimum": 0 },
    "metrics": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "oneOf": [
          { "type": "number" },
          { "type": "string" },
          { "type": "boolean" },
          { "type": "null" }
        ]
      },
      "propertyNames": { "pattern": "^[a-z0-9_]+$" }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  }
}


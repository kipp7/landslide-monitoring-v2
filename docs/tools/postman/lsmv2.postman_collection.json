{
  "info": {
    "name": "LSMv2 Local API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "apiV1", "value": "{{baseUrl}}/api/v1" }
  ],
  "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}", "type": "string" }] },
  "item": [
    {
      "name": "Health",
      "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/health" } }
    },
    {
      "name": "Inspect DB (legacy debug)",
      "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/inspect-db" } }
    },
    {
      "name": "Me",
      "request": { "method": "GET", "url": { "raw": "{{apiV1}}/auth/me" } }
    },
    {
      "name": "Devices (page 1)",
      "request": { "method": "GET", "url": { "raw": "{{apiV1}}/devices?page=1&pageSize=100" } }
    },
    {
      "name": "Sensors",
      "request": { "method": "GET", "url": { "raw": "{{apiV1}}/sensors" } }
    },
    {
      "name": "Anomaly Assessment (v1)",
      "request": { "method": "GET", "url": { "raw": "{{apiV1}}/anomaly-assessment?timeWindow={{timeWindow}}" } }
    },
    {
      "name": "Anomaly Assessment (legacy compat)",
      "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/anomaly-assessment?timeWindow={{timeWindow}}" } }
    },
    {
      "name": "IoT Device Mappings (legacy compat)",
      "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/iot/devices/mappings" } }
    }
  ]
}


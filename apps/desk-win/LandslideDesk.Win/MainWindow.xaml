<Window x:Class="LandslideDesk.Win.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LandslideDesk.Win"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="山体滑坡监测预警平台（桌面端）"
        Height="860"
        Width="1380"
        MinHeight="720"
        MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        Background="#0B1220">
    <Grid>
        <wv2:WebView2 x:Name="DeskWebView" />

        <Grid x:Name="LoadingOverlay" Background="#0B1220" Visibility="Visible">
            <Border Width="520"
                    Padding="18"
                    BorderThickness="1"
                    CornerRadius="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3322D3EE" Offset="0" />
                        <GradientStop Color="#2238BDF8" Offset="1" />
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.Background>
                    <SolidColorBrush Color="#0D1B2D" Opacity="0.92" />
                </Border.Background>
                <StackPanel>
                    <TextBlock Text="山体滑坡监测预警平台"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#E2E8F0" />
                    <TextBlock x:Name="LoadingSubtitle"
                               Margin="0,6,0,0"
                               Text="正在启动桌面端..."
                               Foreground="#94A3B8"
                               FontSize="13" />
                    <ProgressBar Margin="0,14,0,0"
                                 Height="4"
                                 IsIndeterminate="True"
                                 Foreground="#22D3EE"
                                 Background="#111827" />
                    <TextBlock Margin="0,10,0,0"
                               Text="提示：F11 全屏 / ESC 退出全屏"
                               Foreground="#64748B"
                               FontSize="12" />
                </StackPanel>
            </Border>
        </Grid>

        <Grid x:Name="ErrorOverlay" Background="#0B1220" Visibility="Collapsed">
            <Border Width="720"
                    Padding="18"
                    BorderThickness="1"
                    CornerRadius="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#33F97316" Offset="0" />
                        <GradientStop Color="#2222D3EE" Offset="1" />
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.Background>
                    <SolidColorBrush Color="#0D1B2D" Opacity="0.94" />
                </Border.Background>
                <StackPanel>
                    <TextBlock x:Name="ErrorTitle"
                               Text="无法加载页面"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#E2E8F0" />
                    <TextBlock x:Name="ErrorDetail"
                               Margin="0,8,0,0"
                               TextWrapping="Wrap"
                               Foreground="#94A3B8"
                               FontSize="13" />
                    <StackPanel Orientation="Horizontal" Margin="0,14,0,0">
                        <Button Padding="14,8"
                                Margin="0,0,10,0"
                                Background="#0EA5E9"
                                Foreground="#061021"
                                BorderThickness="0"
                                Click="OnRetryClick">
                            重新加载
                        </Button>
                        <Button x:Name="SwitchToLocalButton"
                                Padding="14,8"
                                Margin="0,0,10,0"
                                Background="#111827"
                                Foreground="#E2E8F0"
                                BorderBrush="#2238BDF8"
                                BorderThickness="1"
                                Visibility="Collapsed"
                                Click="OnSwitchToLocalClick">
                            切换到本地资源
                        </Button>
                        <Button Padding="14,8"
                                Background="#111827"
                                Foreground="#E2E8F0"
                                BorderBrush="#2238BDF8"
                                BorderThickness="1"
                                Click="OnExitClick">
                            退出
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
